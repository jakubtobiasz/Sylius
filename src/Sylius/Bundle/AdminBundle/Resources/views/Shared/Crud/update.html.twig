{% extends '@SyliusAdmin/Shared/Layout/default.html.twig' %}

{% set header = configuration.vars.header|default(metadata.applicationName~'.ui.edit_'~metadata.name) %}
{% set event_prefix = metadata.applicationName ~ '.admin.' ~ metadata.name ~ '.update' %}

{% block title %}{{ header|trans }} {{ parent() }}{% endblock %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block content %}
    {{ sylius_template_event([event_prefix ~ '.header.before', 'sylius.admin.index.header.before']) }}
    {% include '@SyliusAdmin/Shared/Crud/Common/_header.html.twig' %}
    {{ sylius_template_event([event_prefix ~ '.header.after', 'sylius.admin.index.header.after']) }}
    {{ sylius_template_event([event_prefix ~ '.content.before', 'sylius.admin.index.content.before']) }}
    {% include '@SyliusAdmin/Shared/Crud/Update/_content.html.twig' %}
    {{ sylius_template_event([event_prefix ~ '.content.after', 'sylius.admin.index.content.after']) }}
{% endblock %}

{% block stylesheets %}
    {{ sylius_template_event([event_prefix ~ '.stylesheets', 'sylius.admin.update.stylesheets'], { 'metadata': metadata }) }}
{% endblock %}

{% block javascripts %}
    {{ sylius_template_event([event_prefix ~ '.javascripts', 'sylius.admin.update.javascripts'], { 'metadata': metadata }) }}
{% endblock %}
